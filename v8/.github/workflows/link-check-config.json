{
  "ignorePatterns": [
    {
      "pattern": "(localhost)"
    }
  ],
  "replacementPatterns": [
    {
      "pattern": "(^\\/(architecture|event)[^#]*)(#.*|$)",
      "replacement": "$1.md$3"
    },
    {
      "pattern": "^(\\/|@site\\/)",
      "replacement": "{{BASEURL}}/docs/"
    }
  ],
  "retryOn429": true,
  "retryCount": 3,
  "fallbackRetryDelay": "10s"
}
